.index{
  height: 100vh;
  padding: 0;
  background: #F0F4F3;
  color: #333;
  font-size: 24rpx;
}

/* 路线详情 */
.detail {
  width: 90%;
  border-radius: 5px;
  background-color: #fff;
  margin: 20rpx auto 20rpx;
  font-size: 30rpx;
  padding: 20rpx;
}
.detail image {
  width: 45rpx;
  height: 45rpx;
  align-self: center;
  padding: 10rpx;
}
.detail .stop {
  width: 45%;
  text-align: center;
  font-size: 45rpx;
  color: rgba(236, 112, 29, 0.863);
  word-break: break-all;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
}
.detail .time {
  color: #888;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
}
.detail .tip {
  color: #888;
  padding-left: 30rpx;
}

/* 站点详情 */
.stop {
  width: 90%;
  padding: 20rpx;
  border-radius: 5px;
  background-color: #fff;
  margin: 0 auto;
}
.stop .item {
  width: 100%;
  line-height: 100rpx;
  font-size: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
  box-sizing: border-box;
  padding-right: 40rpx;
  height: 100rpx;
}
.stop .item .arrow {
  width: 10%;
  height: 100%;
  text-align: center;
  position: relative;
}
.stop .item .arrow .line {
  width: 6rpx;
  height: 100%;
  background: #888;
  position: absolute;
  left: 50%;

}
.stop .item .arrow .dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: #888;
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -6rpx;
  margin-top: -6rpx;
}

.stop .item .number {
  width: 10%;
  height: 100%;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
}
.stop .item .number .circle {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #888;
  color: #fff;
  line-height: 60rpx;
}

.stop .item .stopname {
  flex: 1;
  height: 100%;
  padding-left: 40rpx;
  color: #888;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.stop .item .active-name {
  color: #2A8CE5!important;
  font-size: 36rpx;
}
.stop .item .active-number {
  color: #2A8CE5!important;
  background: #8CCEFD!important;
}

.stop .item image {
  width: 45rpx;
  height: 45rpx;
  padding: 10rpx;
}
